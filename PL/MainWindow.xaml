<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF0B6928"/>
                <GradientStop Color="White" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button Content="Handle Engineer" Click="btnEngineer_Click" HorizontalAlignment="Center" Margin="0,296,0,0" VerticalAlignment="Top" Height="83" Width="330" Background="#FF14B345" BorderBrush="Black" BorderThickness="2,2,2,2" FontSize="16"/>
        <Button Content="Database initialization" Click="init_db" HorizontalAlignment="Center" Margin="0,32,0,0" VerticalAlignment="Top" Height="83" Width="434" Background="#FF14B345" BorderBrush="Black" BorderThickness="2,2,2,2" FontSize="16"/>
        <Button Content="Reset database" Click="rst_db" HorizontalAlignment="Center" Margin="0,134,0,0" VerticalAlignment="Top" Height="83" Width="434" Background="#FF14B345" BorderBrush="Black" BorderThickness="2,2,2,2" FontSize="16"/>

    </Grid>
</Window>
